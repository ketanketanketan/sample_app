<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
		<%= render 'layouts/stylesheets' %>
  </head>
  <body>
		<div class="container">
			
			<%= render 'layouts/header' %>
			
			<section class="round">
				<% flash.each do |key, value|%>
					<div class="flash <%= key %>">
						<p> <%= value %> </p>
					</div>
					<!-- Putting embedded ruby inside a class in a div allows us to style the class -->
				<% end %>
    		<%= yield %>
  		</section>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</body>
</html>